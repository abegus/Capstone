@model Capstone.Models.Question
@using Capstone.Models
@using Capstone.Helpers

@{
    ViewBag.Title = "GetQuestion";
}


<div class="panel panel-body col-sm-12" style="padding:0; margin:0">
    <div class="help-tip" style="margin:5px;">
        <p>Description: @Model.Description <br />Answer: @Model.Answer</p>
    </div>

        @if (Model.Type == 1)
        {
            <div id="fit1" style="text-align:center; padding-bottom:50px">
                @Model.Text
            </div>
        }
        else
        {
            <div class="wrapper" style="border:none">
                <span class="for-image"></span>
                @Html.Image(Model.Picture)
            </div>
        }
</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
<script src="~/Scripts/jquery.fittext.js"></script>
<script>
    jQuery("#fit1").fitText();
</script>

