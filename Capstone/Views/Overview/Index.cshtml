@model Capstone.ViewModels.ClassQuizOverview

@{
    ViewBag.Title = "Index";
}

<h2>Students progress in @Model.currentQuiz.Name</h2>

<div>
    <table class="table">
        <tr>
            <th>Student Name</th><th>Questions Answered</th><th>Completed</th><th>Actions</th>
        </tr>
        @foreach(var item in Model.studentAttempts)
        {
            <tr>
                <td>
                    @item.Key.First  @item.Key.Last
                </td>
                <td>
                    @item.Value[0] / @item.Value[1]
                </td>
                <td>
                    @if (item.Value[0] >= item.Value[1]) {
                        <div>Yes</div>
                    }
                    else{ 
                        <div>No</div>
                    }
                </td>
                <td>
                    @Html.ActionLink("Take Quiz", "Take", "DynamicTesting", new { classId = Model.currentClass.Id, quizId = Model.currentQuiz.Id, studentId = item.Key.Id }, null) |
                    @Html.ActionLink("Resume Quiz", "Advanced", "DynamicTesting", new { Id = item.Key.Id }, null) |
                    @Html.ActionLink("Retake Quiz", "Delete", "DynamicTesting", new { quizId = item.Key.Id, classId = Model.currentClass.Id }, null)
                </td>
            </tr>
        }
    </table>
</div>

